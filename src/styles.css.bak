body { font-family: sans-serif; background: #f8fafc; color: #1e293b; margin: 0; display: flex; flex-direction: column; height: 100vh; }
header { background: #fff; padding: 1rem; border-bottom: 1px solid #e2e8f0; display: flex; justify-content: space-between; }
#main-layout { flex: 1; display: flex; overflow: hidden; }
#chat-container { flex: 1; display: flex; flex-direction: column; padding: 1rem; }
#messages { flex: 1; overflow-y: auto; display: flex; flex-direction: column; gap: 1rem; }
.message { padding: 1rem; border-radius: 1rem; max-width: 80%; }
.message.user { align-self: flex-end; background: #2563eb; color: #fff; }
.message.ai { align-self: flex-start; background: #fff; border: 1px solid #e2e8f0; position: relative; padding-top: 2.5rem; }
#right-nav { width: 300px; background: #fff; border-left: 1px solid #e2e8f0; padding: 1rem; transition: width 0.3s; }
#right-nav.collapsed { width: 0; padding: 0; opacity: 0; border: none; }
.card { border: 1px solid #e2e8f0; padding: 1rem; margin-bottom: 1rem; border-radius: 0.5rem; cursor: pointer; }
#input-area { display: flex; gap: 1rem; padding-top: 1rem; }
input { flex: 1; padding: 0.5rem; border: 1px solid #e2e8f0; border-radius: 0.5rem; }
button { padding: 0.5rem 1rem; background: #2563eb; color: #fff; border: none; border-radius: 0.5rem; }
#status-bar { border-top: 1px solid #e2e8f0; padding: 0.5rem; font-size: 0.8rem; }
.copy-btn { position: absolute; top: 0.5rem; right: 0.5rem; font-size: 0.7rem; }